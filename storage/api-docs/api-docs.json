    "components": {
        "schemas": {
            "Medicine": {
                "title": "medicine",
                "description": "Required properties of model medicine",
                "required": [
                    "name",
                    "stock",
                    "price"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "example": "Counter Pain"
                    },
                    "stock": {
                        "type": "integer",
                        "example": "30"
                    },
                    "price": {
